[tasks]
bmc
cover

[options]
bmc:
mode bmc
depth 50

cover:
mode cover
depth 200
--

[engines]
smtbmc

[script]
read -formal shift_register_piso.v
read -formal shift_register_sipo.v
read -formal clkdiv.v
read -formal timer.v
read -formal quick_spi.v
chparam -set MAX_DATA_LENGTH 5 quick_spi

cover:
chparam -set COVER 1 quick_spi
--

prep -top quick_spi

[files]
{{files}}
